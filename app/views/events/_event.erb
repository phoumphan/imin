<%content_for :head do%>
<script src="http://maps.google.com/maps?file=api&v=2&key=abcdefg&sensor=false"
        type="text/javascript">
</script>
<script src="http://gmaps-utility-library.googlecode.com/svn/trunk/markermanager/release/src/markermanager.js"
        type="text/javascript">
</script>
<script src="/javascripts/MapCommon.js"
        type="text/javascript">
</script>
<script type="text/javascript">

function initialize() {
  basic_init();

  pos = new GLatLng(<%= @lat %>, <%= @lng %>);
  map.addOverlay(new GMarker(pos));
  map.setCenter(pos, 17);
}

</script>
<%end%>

<%content_for :body_attributes do%>
onLoad="initialize();"
onUnload="GUnload();"
<%end%>

<h3><strong>Name:</strong>
<%=@event.name%></h3>

<br />
<strong>Description:</strong>
<%=@event.description%>
<br /><br />
<div id="weather" style="position: absolute; top:200px; left: 485px;">
    <%=@description%>
</div>
<strong>Location:</strong>
<div id="map_canvas" style="width: 400px; height: 300px"></div>
<br /><br />
<strong>Starts:</strong>
<%=@event.start_at%>
<br /><br />
<strong>Ends:</strong>
<%=@event.end_at%>
<br /><br />
<strong>Cost:</strong>
<%=@event.cost%>
<br /><br />
<strong>Dress Code:</strong>
<%=@event.formality%>
<br /><br />
This is a <%=@event.formality%> event
<br /><br />


<h4><strong>Event types</strong></h4>
<ol>
  <%for type in @event.eventtypes%>
    <li>
      <%=type.description%>
    </li>
  <%end%>
</ol>


