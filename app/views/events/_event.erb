<%content_for :head do%>
<script src="http://maps.google.com/maps?file=api&v=2&key=abcdefg&sensor=false"
        type="text/javascript">
</script>
<script src="http://gmaps-utility-library.googlecode.com/svn/trunk/markermanager/release/src/markermanager.js"
        type="text/javascript">
</script>
<script src="/javascripts/MapCommon.js"
        type="text/javascript">
</script>
<script type="text/javascript">

function initialize() {
  basic_init();
  
  pos = new GLatLng(<%= @lat %>, <%= @lng %>);
  map.addOverlay(new GMarker(pos));
  map.setCenter(pos, 17);
}

</script>
<%end%>

<%content_for :body_attributes do%>
onLoad="initialize();"
onUnload="GUnload();"
<%end%>

<h3><b><%=@event.name%></b></h3>

<br />
<b>Description:</b>
<%=@event.description%>
<br />
<b>Location:</b>
<div id="map_canvas" style="width: 500px; height: 300px"></div>
<br />
<b>Date:</b>
<%=@event.event_date%>
<br />
<b>Time:</b>
<%=@event.event_time%>
<br />
<b>Cost:</b>
<%=@event.cost%>
<br />
<b>Dress Code:</b>
<%=@event.formality%>
<br />
<b>This is a <%=@event.formality%> event</b>
<br />


<h4><b>Event types</b></h4>
<ol>
  <%for type in @event.eventtypes%>
    <li>
      <%=type.description%>
    </li>
  <%end%>
</ol>


