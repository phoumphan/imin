<DIV Align = RIGHT>
  <%if current_user%>

  <%if @admin_status%>
    <%=link_to 'Edit', edit_event_path(@event.id)%><br />
    <%=link_to 'Invite a User', :action => 'invite_user', :id => @event.id%><br />
    <%=link_to 'Add an Admin', :action => 'add_admin', :id => @event.id%><br />
    <%if current_user.id == @event.owner.id%>
      <%= link_to 'Delete', {:action => 'deletion', :id => @event.id}, :confirm => "Are you sure you want to delete this event?"%><br />
    <%end%>
  <%end%>

  <%=link_to("Back", request.env["HTTP_REFERER"])%>
<%end%>
</DIV>

